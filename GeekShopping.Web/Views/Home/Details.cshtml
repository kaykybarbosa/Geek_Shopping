@model GeekShopping.Web.Models.ProductViewModel

<form method="post">
    <input asp-for="Id" hidden/>

    <div class="pt-4">
        <div class="card container" style="border: 1px solid #808080;">
            <div class="card-header text-light row" style="border-radius: 0px">
                <div class="col-12 col-md-9">
                    <h1 class="text-dark">@Model.Name</h1>
                </div>

                <div class="col-12 col-md-3 text-end">
                    <h1 class="text-warning">@((Model.Price).ToString("c"))</h1>
                </div>
            </div>

            <div class="card-body">
                <div class="container rouded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius: 35px;" width="100%" class="rounded"/>
                        </div>
                    
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge badge-primary text-success p-3 border">@Model.CategoryName</span>

                                    <h3 class="text-success"></h3>

                                    <p class="text-secondary">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>

                            <div class="row px-4">
                                <input asp-for="Count" class="form-control"/>

                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-lg btn-square form-control" style="height: 50px;">Back to list</a>
                </div>

                <div class="col-12 col-md-6">
                    <button type="submit" value="Create" class="btn btn-primary btn-lg form-control" style="height: 50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>
 
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}